<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    tools:context=".activities.home.HomeActivity">

    <LinearLayout
        android:focusableInTouchMode="false"
        android:background="@drawable/top_bg_round"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ktcdrivers.customtext.CustomTextViewBold
                    android:text="Add Charges"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:padding="5dp"
                    android:textSize="@dimen/size_16"
                    android:layout_height="wrap_content" />
                <com.ktcdrivers.customtext.CustomTextView
                    android:text="Beverages Charges"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/size_12"
                    android:layout_height="wrap_content" />

                <com.ktcdrivers.customtext.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:textSize="@dimen/size_12"
                    android:singleLine="true"
                    android:id="@+id/duty_slip_charge1_edt_beverage"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number"/>

                <com.ktcdrivers.customtext.CustomTextView
                    android:text="Entrance Charges"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/size_12"
                    android:layout_height="wrap_content" />

                <com.ktcdrivers.customtext.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:textSize="@dimen/size_12"
                    android:id="@+id/duty_slip_charge1_edt_entrance"
                    android:singleLine="true"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number" />

                <com.ktcdrivers.customtext.CustomTextView
                    android:text="Guide Charges"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/size_12"
                    android:layout_height="wrap_content" />

                <com.ktcdrivers.customtext.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:id="@+id/duty_slip_charge1_edt_guide"
                    android:textSize="@dimen/size_12"
                    android:singleLine="true"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number" />

                <com.ktcdrivers.customtext.CustomTextView
                    android:text="Driver TA"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/size_12"
                    android:layout_height="wrap_content" />

                <com.ktcdrivers.customtext.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:textSize="@dimen/size_12"
                    android:singleLine="true"
                    android:id="@+id/duty_slip_charge1_edt_driver_ta"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number" />

                <com.ktcdrivers.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_bg"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:id="@+id/duty_slip_charge1_save"
                    android:paddingBottom="8dp"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_charges_pop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/button_dark_blue_round"
        android:gravity="center"
        android:id="@+id/duty_slip_charge1_cross"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp">

        <com.ktcdrivers.customtext.CustomTextView
            android:id="@+id/dialog_location_tv_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_18"/>

    </LinearLayout>

</RelativeLayout>


