<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_bg"
            android:layout_toLeftOf="@+id/fragment_duty_slip_upload_document">

            <com.ktcdriver.customtext.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_duty_slip_edt_upload_document"
                android:hint="Document "
                android:textSize="@dimen/size_12"
                android:paddingHorizontal="10dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <com.ktcdriver.customtext.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/fragment_duty_slip_upload_document"
            android:text="Upload Document"
            android:textSize="10sp"
            android:background="@drawable/button_bg"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>