<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.ktcdriver.customtext.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starting Meter"
                android:textSize="@dimen/size_16"
                android:id="@+id/item_duty_title1"
                android:textColor="@color/colorBlack"/>

            <com.ktcdriver.customtext.CustomEditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="2011"
                android:textSize="@dimen/size_12"
                android:singleLine="true"
                android:background="@drawable/duty_slip_bg"
                android:paddingLeft="5dp"
                android:gravity="left|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.ktcdriver.customtext.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starting Time"
                android:textSize="@dimen/size_16"
                android:id="@+id/item_duty_title2"
                android:textColor="@color/colorBlack"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/duty_slip_bg"
                android:orientation="horizontal">
                <com.ktcdriver.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="10:30"
                    android:textSize="@dimen/size_12"
                    android:id="@+id/item_duty_cal_value"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clock"
                    android:background="@drawable/calender_bg"
                    android:paddingLeft="7dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="7dp"
                    android:paddingTop="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkGrey"/>
</LinearLayout>