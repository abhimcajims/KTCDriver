<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.setup.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/logo_b"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <com.ktcdriver.customtext.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_login_driver_id"
            android:textSize="@dimen/size_16"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:background="@drawable/edittext_bg"
            android:imeOptions="actionNext"
            android:drawablePadding="5dp"
            android:id="@+id/activity_login_edtDriverId"
            android:drawableLeft="@drawable/ic_user"/>

        <com.ktcdriver.customtext.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_login_password"
            android:textSize="@dimen/size_16"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:id="@+id/activity_login_edtPass"
            android:drawableLeft="@drawable/ic_lock"/>

        <com.ktcdriver.customtext.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_txtLogin"
            android:id="@+id/activity_login_txtLogin"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg" />

    </LinearLayout>

</RelativeLayout>